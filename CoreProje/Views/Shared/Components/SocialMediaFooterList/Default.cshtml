@using EntityLayer.Concrete
@model List<SocialMedia>
    
<div class="social-nav">
    <nav role="navigation">
        <ul class="nav justify-content-center">
            @foreach (var item in Model)
            {
                var iconClass = item.Icon.Insert(3, " ");
                <li class="nav-item"><a class="nav-link" href="@item.Url" title="@item.Name"><i class="@iconClass"></i><span class="menu-title sr-only">@item.Name</span></a></li>
            }
        </ul>
    </nav>
</div>