@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Referans Düzenle</p>
                <form class="forms-sample">

                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.TestimonialId, new { @class = "form-control", @id = "notClickable" })
                    </div>

                    <div class="form-group">
                        <label>Ad Soyad</label>
                        @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Firma/Şirket</label>
                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Yorum</label>
                        @Html.TextAreaFor(x => x.Comment, 6, 3, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Resim URL</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button type="button" class="btn btn-dark" onclick="window.history.back();">İptal Et</button>
                </form>
            </div>
        </div>
    </div>
}

<script>
    var dateTextBox = document.getElementById("notClickable");
    dateTextBox.addEventListener("mousedown", function (event) {
        event.preventDefault(); // Tıklamayı engelle
    });
</script>

