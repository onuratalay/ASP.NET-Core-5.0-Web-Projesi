@using EntityLayer.Concrete
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<!-- Card header -->
<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Listesi</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
        <tr>
            <th scope="col" class="sort" data-sort="name">#</th>
            <th scope="col" class="sort" data-sort="budget">Başlık</th>
            <th scope="col">Sil</th>
            <th scope="col" class="sort" data-sort="completion">Düzenle</th>
        </tr>
        </thead>
        <tbody class="list">

        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @item.ServiceId
                </th>
                <th class="budget">
                    @item.Title
                </th>
                    <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger btn-sm"><i class="ni ni-fat-remove"></i>Sil</a></td>
                    <td><a href="/Service/EditService/@item.ServiceId" class="btn btn-warning btn-sm">Düzenle</a></td>
            </tr>
        }
        </tbody>
    </table>
    <a href="/Service/AddService" class="btn btn-success">Hizmet Ekle</a>
</div>

