@using EntityLayer.Concrete
@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@{
        string png = ".png";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya Hesapları</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th>#</th>
                            <th>İsim</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/template/images/socialmedia/@(item.Icon + png)" alt="image" />
                                </td>
                                <td>@item.Name</td>
                                <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger btn-rounded btn-md">Sil</a></td>
                                <td><a href="/SocialMedia/EditSocialMedia/@item.SocialMediaId" class="btn btn-outline-warning btn-rounded btn-md">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/SocialMedia/AddSocialMedia/" class="btn btn-success">Sosyal Medya Ekle</a>
            </div>
        </div>
    </div>
</div>
