@model EntityLayer.Concrete.Skill

@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Yeni Yetenek Ekle</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x=>x.Title,new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Değer</label>
                    @Html.TextBoxFor(x=>x.Value,new {@class="form-control"})
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="button" class="btn btn-dark" onclick="window.history.back();">İptal Et</button>
            </form>
        </div>
    </div>
</div>
