@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AddAdminMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Yeni Mesaj Gönder</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Alıcı Adı</label>
                    @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Konu</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mesajınız</label>
                    @Html.TextAreaFor(x => x.MessageContent, 6, 3, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    @Html.TextBox("Date", DateTime.Now.ToString("dd MMMM yyyy"), new { @class = "form-control", @id = "dateTextBox" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="button" class="btn btn-dark" onclick="window.history.back();">İptal Et</button>
            </form>
        </div>
    </div>
</div>

<script>
    // Tarih textbox'ını tıklanamaz hale getirme
    var dateTextBox = document.getElementById("dateTextBox");
    dateTextBox.addEventListener("mousedown", function (event) {
        event.preventDefault(); // Tıklamayı engelle
    });
</script>
