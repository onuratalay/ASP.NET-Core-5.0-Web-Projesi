@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "SenderMessageDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Mesaj Detayları</h1>

<form class="form-group">
    @Html.HiddenFor(x => x.WriterMessageId, new { @class = "form-control", @readonly = "readonly" })
    @Html.Label("Alıcı Adı")
    @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Alıcı Kullanıcı Adı")
    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control", @readonly = "readonly" })
    <br />
    <a asp-action="SenderMessage" class="btn btn-sm btn-inverse-info">Geri Dön</a>
</form>