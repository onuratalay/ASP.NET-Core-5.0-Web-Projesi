@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Mesaj Detayları</h1>

<form class="form-group">
    @Html.HiddenFor(x => x.WriterMessageId, new { @class = "form-control", @readonly = "readonly" })
    @Html.Label("Gönderen Adı")
    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Gönderen Kullanıcı Adı")
    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control", @readonly = "readonly" })
    <br />
    <a asp-action="ReceiverMessage" class="btn btn-sm btn-inverse-info">Geri Dön</a>
</form>