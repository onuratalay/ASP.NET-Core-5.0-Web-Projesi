@using EntityLayer.Concrete
@model List<WriterMessage>

@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Konu</th>
                        <th>Alıcı</th>
                        <th>Tarih</th>
                        <th>Mesajı Gör</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.WriterMessageId</th>
                            <td>@item.Subject</td>
                            <td>@item.Receiver</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                            <td><a href="/User/Message/SenderMessageDetails/@item.WriterMessageId" class="btn btn-outline-dark">Detay</a></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
