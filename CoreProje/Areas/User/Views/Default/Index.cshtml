@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@{
    string color = "";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                            <th>Detay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Status == "Bakım")
                            {
                                color = "badge badge-danger";
                            }

                            if (item.Status == "Güncelleme")
                            {
                                color = "badge badge-warning";
                            }

                            if (item.Status == "Yeni Yazı")
                            {
                                color = "badge badge-success";
                            }

                            <tr>
                                <th>@item.Id</th>
                                <td>@item.Title</td>
                                <td>@(((DateTime) item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td><a href="/User/Default/AnnouncementDetails/@item.Id" class="btn btn-outline-dark">Detay</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


